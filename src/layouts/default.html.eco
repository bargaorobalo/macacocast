<!doctype html>
<html lang="pt-BR">
<head>
    <title>MacacoCast - <%= @document.title %> </title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="<%= @project.baseUrl %>/assets/css/bootstrap.css" rel="stylesheet">
    <link href="<%= @project.baseUrl %>/assets/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="<%= @project.baseUrl %>/assets/css/default.css" rel="stylesheet">
    <link rel="shortcut icon" type="image/x-icon" href="<%= @project.baseUrl %>/assets/img/favicon.ico">
</head>
<body>
    <div class="container">
        <div class="row clearfix">
            <div class="column">
                <div class="logo">
                    <h1 class="text-center">
                        <img src="<%= @project.baseURL %>/assets/img/monkey.png" width="25%">
                    </h1>
                    <h2 class="text-center "><%= @project.name %></h2>
                    <small class="text-center"><%= @project.slogan %></small>
                </div>
            </div>
        </div>
    </div>

<%- @content %>

    <footer class="footer">
        <section class="all-objects">
            <img src="/assets/img/monkey-monocolor.png" alt="Monkey monocolor">
            <ul class="menu">
                <li><a href="#">Home</a></li>
                <li><a href="#">Sobre</a></li>
                <li><a href="#">Feed</a></li>
                <li><a href="#">Contato</a></li>
            </ul>
            <ul class="social">
                <li><a href="#"><span>Twitter</span></a></li>
                <li><a href="#"><span>Facebook</span></a></li>
            </ul>
        </section>
    </footer>
</body>
</html>